<h1>Add Order for Table <%= @party.t_number %></h1>
<form action="/orders" method="post">
  <input type="hidden" name="order[party_id]" value="<%= @party.id %>">
  <select name="order[meal_id]">
    <% @meals.each do |meal| %>
    <option value="<%= meal.id %>"><%= meal.name %></option>
    <%end%>
  </select>

  <select name="order[quantity]">
    <% 10.times do |x| %>
    <% x += 1 %>
    <option value="<%= x %>"><%= x %></option>
    <% end %>
  </select>
  <input type="Submit">
</form>
